---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  title: string;
  description: string;
  class?: string;
}

const { icon, title, description, class: className } = Astro.props;
---

<div class={`group relative ${className || ''}`}>
  <div
    class="absolute inset-0 bg-primary transform translate-x-2 translate-y-2 transition-transform group-hover:translate-x-4 group-hover:translate-y-4"
  >
  </div>
  <div
    class="relative bg-secondary h-full p-8 border-2 border-white/10 group-hover:border-primary transition-colors"
  >
    <div class="mb-6">
      <Icon name={icon} class="text-primary text-5xl" />
    </div>
    <h3
      class="text-2xl font-display font-black text-white uppercase mb-4 leading-none"
      set:html={title}
    />
    <p class="text-gray-200 leading-relaxed font-light">
      {description}
    </p>
  </div>
</div>
